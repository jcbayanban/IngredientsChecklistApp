
@{    
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div ng-controller="loginController">
    <form class="form-horizontal" name="frmLogin">
        <div class="form-group">
            <div class="col-sm-3 control-label no-padding-right">
                <label>User Name</label>
            </div>
            <div class="col-sm-9">
                <input class="form-control" name="userName" required ng-model="userName" />
                <span class="text-danger" ng-show="(frmLogin.userName.$invalid && !frmLogin.userName.$pristine)">User Name is required</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label no-padding-right">
                <label>Password</label>
            </div>
            <div class="col-sm-9">
                <input type="password" class="form-control" name="code" required ng-model="password" />
                <span class="text-danger" ng-show="(frmLogin.password.$invalid && !frmLogin.password.$pristine)">User Name is required</span>
            </div>
        </div>
        <div class="form-group">
                <div class="col-sm-3">
                </div>
                <div class="col-sm-3">
                    <button type="button" class="btn btn-primary" ng-click="login()">Login</button>
                </div>
                <div class="col-sm-3">
                </div>
        </div>
    </form>
</div>

@section scripts
    {
<script src="~/Scripts/Login/Login.js"></script>
}
